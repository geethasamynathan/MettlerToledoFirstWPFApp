            HorizontalAlignment="Left" Height="41" 
                 Margin="387,151,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>
        <Button  Background="blue" Foreground="White" FontWeight="Bold" Content="Login"
            HorizontalAlignment="Left" Click="Button_Click" FontSize="24"
                 Margin="217,246,0,0" VerticalAlignment="Top" Width="118" Height="35" 
                 />
    </Grid>
</Window>
