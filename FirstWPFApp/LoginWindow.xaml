        xmlns:local="clr-namespace:FirstWPFApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Username" FontSize="24" Margin="186,64,458.6,298"/>
        <TextBox x:Name="_Username" FontSize="24"
                 
            HorizontalAlignment="Left" Height="41" Margin="399,64,0,0" 
